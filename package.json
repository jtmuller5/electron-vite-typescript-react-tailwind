{
  "name": "electron-vite-typescript-react-tailwind",
  "version": "1.0.0",
  "description": "Electron template with Vite, TypeScript, React, and TailwindCSS",
  "main": ".vite/main/main.js",
  "scripts": {
    "build": "tsc -b src/main src/client",
    "start": "electron-forge start",
    "go": "concurrently \"vite --config src/client/vite.config.ts\" \"wait-on http://localhost:5173 && electron .\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "electron": "34.2.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@electron-forge/plugin-vite": "^7.6.1",
    "@tailwindcss/vite": "^4.0.6",
    "@vitejs/plugin-react": "^4.3.4",
    "electron-squirrel-startup": "^1.0.1",
    "tailwindcss": "^4.0.6",
    "vite": "^6.1.0",
    "wait-on": "^8.0.2"
  }
}
